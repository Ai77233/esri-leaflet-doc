layout: example.hbs
vector: true
---

<div id="map"></div>

<script>
  var map = L.map('map').setView([40, -4], 6);

  L.esri.Vector.vectorBasemapLayer('ArcGIS:Streets', {
    apiKey: apiKey // replace with your api key - https://developers.arcgis.com
  }).addTo(map);
</script>
